@{
    ViewData["Title"] = "Técnicos Dentales";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="fw-bold display-5">Técnicos Dentales</h1>
        <p class="text-muted fs-5">Lista de técnicos y analisis de rendimiento.</p>
    </div>

    <div class="row">
        @* Simulación de técnicos en una lista *@
        @{
            var tecnicos = new List<dynamic>
        {
        new { Nombre = "Juan Pérez", Calificacion = 5 },
        new { Nombre = "María López", Calificacion = 4 },
        new { Nombre = "Carlos Herrera", Calificacion = 3 }
        };
        }

        @foreach (var tecnico in tecnicos)
        {
            <div class="col-md-4">
                <div class="card shadow-lg text-center p-4 mb-4">
                    <div class="card-body">
                        <!-- Foto de perfil -->
                        <div class="mb-3">
                            <i class="fas fa-user-circle fa-5x text-secondary"></i>
                        </div>

                        <h4 class="card-title">@tecnico.Nombre</h4>

                        <!-- Estrellas de calificación -->
                        <div class="mb-3">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= tecnico.Calificacion)
                                {
                                    <i class="fas fa-star text-warning"></i> <!-- Estrella llena -->
                                }
                                else
                                {
                                    <i class="far fa-star text-warning"></i> <!-- Estrella vacía -->
                                }
                            }
                        </div>

                        <!-- Botones -->
                        <a href="@Url.Action("Index", "Trabajos", new { tecnico = tecnico.Nombre })" class="btn btn-primary">Ver Trabajos</a>
                        <a href="@Url.Action("Detalles", "Tecnicos", new { tecnicoNombre = tecnico.Nombre })" class="btn btn-info">Ver Datos</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Botón para volver al Dashboard del Laboratorio -->
    <div class="row mt-4">
        <div class="col text-center">
            <a href="@Url.Action("DashboardLaboratorio", "Home")" class="btn btn-secondary btn-lg">Volver</a>
        </div>
    </div>
</div>

<!-- FontAwesome para íconos -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
